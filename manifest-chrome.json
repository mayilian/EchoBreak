{
    "manifest_version": 3,
    "name": "Echo Break",
    "version": "1.2",
    "description": "Break out of your YouTube bubble by watching curated diverse content in a loop.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png"
        }
    }
}